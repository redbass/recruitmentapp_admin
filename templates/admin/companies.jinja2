{% extends '_main_base.jinja2' %}

{% block body %}

        <div class="row">
            <div class="col offset-1">
                <div class="row">
                    <div class="col-md-7">
                        <h1 class=" px-3 py-1 page-header mb-4">Company List</h1>
                    </div>
                    <div class="col-md-5">
                        <a class="pull-right btn btn-yellow triangle-outter" href="{{ url_for('create_company') }}">
                            Create Company
                            <span class="triangle-inner"></span>
                        </a>
                    </div>
                </div>
            </div>
          </div>
        <div class="row">
            <div class="col offset-1">
                <h3 class="my-4">Review and Edit Companies</h3>
                 <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Trade(s)</th>
                        <th scope="col" class="last">Area</th>
                        <th scope="col" class="table-action -first">
                            <span class="d-none">Column with View and Edit button</span>
                        </th>
                        <th scope="col" class="table-action -delete">
                            <span class="d-none">Column with Delete button</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for company in companies %}
                        <tr>
                            <td>{{ company.name }}</td>
                            <td>{{ company.trade }}</td>
                            <td>{{ company.location }}</td>

                            <td class="table-action -first ">
                                <a
                                    class="btn btn-goto"
                                    href="{{ url_for('edit_company', company_id=company['_id']) }}"
                                >
                                    View or Edit details
                                    <div class="chevron -yellow">&nbsp;</div>
                                </a>
                            </td>
                            <td class="table-action -delete">
                                <button type="button" class="btn btn-danger"  data-toggle="modal" data-target="#deleteModal{{ loop.index }}">Delete Company</button>
                            </td>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="DeleteCompanyModal" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete Company</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                      <p>You are deleting <span class="font-weight-bold">{{ company.name }}</span></p>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-black" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger">Yes, I want to delete</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>



{% endblock body %}