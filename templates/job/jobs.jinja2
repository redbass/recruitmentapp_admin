{% extends '_base.jinja2' %}

{% block body %}

    <div class="container-fluid">
        <div class="navbar navbar-light bg-light justify-content-between">
            <div class="container">
                <a class="navbar-brand" href="#">Job List</a>
                <a class="btn btn-success my-2 my-sm-0 float-right" href="{{ url_for('create_job') }}">Create Job</a>
            </div>
        </div>


        <table class="table table-striped table-hover">
            <thead class="thead-light">
            <tr>
                <th scope="col">Company</th>
                <th scope="col">Title</th>
                <th scope="col">Status</th>
                <th scope="col">Created</th>
                <th scope="col">Updated</th>
                <th scope="col">
                    <span class="d-none">Actions</span>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                {% for advert in job.adverts %}
                <tr>
                    <td>{{ job.company_name }}</td>
                    <td>{{ job.title }}</td>
                    <td>{{ advert.status  }}</td>
                    <td>{{ advert.date.created | format_date }}</td>
                    <td>{{ advert.date.updated | format_date }}</td>
                    <td>
                        <a href="{{ url_for('edit_job', job_id=job._id) }}">Edit</a>
                    </td>
                </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock body %}