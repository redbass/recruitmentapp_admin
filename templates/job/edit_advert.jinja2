
{% macro display_draft_advert(job_id, advert) %}

    <form action="{{ url_for('publish_advert_post', job_id=job_id, advert_id=advert._id) }}" method="post" >
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>
        The advert is in DRAFT status -
        <button type="submit" class="btn btn-link" value="publish">Publish for {{ advert.duration }} days</button>
    </form>

{% endmacro %}


