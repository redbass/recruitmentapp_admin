{% extends '_base.jinja2' %}

{% block body %}

    <div class="container-fluid">
        <div class="navbar navbar-light bg-light justify-content-between">
            <div class="container">
                <a class="navbar-brand" href="#">Company List</a>
                <a class="btn btn-success my-2 my-sm-0 float-right" href="{{ url_for('create_company') }}">
                    Create Company</a>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">
                    <span class="d-none">Actions</span>
                </th>
            </tr>
            </thead>
            <tbody>
                {% for company in companies %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ company.name }}</td>
                    <td>{{ company.description }}</td>
                    <td>
                        <a href="{{ url_for('edit_company', company_id=company['_id']) }}">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock body %}