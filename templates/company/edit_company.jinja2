{% extends '_base.jinja2' %}
{% from "_forms_helpers.jinja2" import render_field, render_basic_field, render_selectfield, render_submit %}

{% block body %}
    <div class="row">
        <div class="col offset-1">
            <div class="row">
                <div class="col-md-7">
                    <h1 class=" px-3 py-1 page-header mb-4">Edit Company</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="offset-lg-1 col-lg-10 col-xl-8">
            <form action="{{ url_for('edit_company_post', company_id=company_id) }}" method="post">

                {{ form.csrf_token() }}
                {{ render_selectfield(form.title) }}
                {{ render_field(form.first_name) }}
                {{ render_field(form.surname) }}
                {{ render_field(form.email) }}
                {{ render_field(form.mobile_number) }}
                {{ render_field(form.office_number) }}

                {{ render_field(form.company_name) }}
                {{ render_field(form.company_description, rows="5") }}
                {{ render_selectfield(form.trades) }}

                    <div class="form-group row">
                      <div class="col-lg-5">
                        <label class="col-form-label font-weight-bold" for="address1">Company address</label>
                      </div>
                    </div>

                {{ render_basic_field(form.address_number) }}
                {{ render_basic_field(form.address_street) }}
                {{ render_basic_field(form.address_town) }}
                {{ render_basic_field(form.address_city) }}
                {{ render_basic_field(form.address_postcode) }}
                {{ render_field(form.company_vat) }}

                {{ render_submit("Save changes") }}

            </form>
        </div>
    </div>

{% endblock body %}